<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title><%= title %></title>
</head>
<body class="bg-gray-100 text-gray-800">
    <%- include('nav') %>
    <div class="max-w-4xl mx-auto p-6">
        <h1 class="text-4xl font-bold mb-6"><%= title %></h1>
        <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-2xl font-semibold mb-4">Get in Touch</h2>
                <form method="post" class="space-y-4">
                    <div>
                        <label for="name" class="block text-gray-700">Name:</label>
                        <input type="text" id="name" name="name" class="w-full p-2 border border-gray-300 rounded" required>
                    </div>
                    <div>
                        <label for="email" class="block text-gray-700">Email:</label>
                        <input type="email" id="email" name="email" class="w-full p-2 border border-gray-300 rounded" required>
                    </div>
                    <div>
                        <label for="message" class="block text-gray-700">Message:</label>
                        <textarea id="message" name="message" rows="4" class="w-full p-2 border border-gray-300 rounded" required></textarea>
                    </div>
                    <button type="submit" onclick="alert('Submitted Successfully')" class="bg-blue-500 w-full text-white px-4 py-2 rounded hover:bg-blue-700">Send Message</button>
                </form>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <h2 class="text-2xl font-semibold mb-4">Contact Details</h2>
                <p class="mb-2"><strong>Name:</strong> <%= contactDetails.name %></p>
                <p class="mb-2"><strong>Phone:</strong> <%= contactDetails.phone %></p>
                <p><strong>Email:</strong> <%= contactDetails.email %></p>
            </div>
        </div>
    </div>
</body>
<script>
    document.querySelector('form').addEventListener('submit', function(event) {
        event.preventDefault();

        const formData = new FormData(this);

        fetch('/contact', {
            method: 'POST',
            body: formData
        })
        .then(response => response.text())
        .then(data => {
            alert('Submitted Successfully');
            console.log(data);
        })
        .catch(error => console.error('Error:', error));
    });
</script>

</html>

